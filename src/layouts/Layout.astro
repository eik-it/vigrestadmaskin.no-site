---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Fabrikkutsalg av gravemaskiner og grunnarbeidsutstyr i Varhaug. Leveringsklare maskiner med rimelig og rask levering i hele Norge." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="nb">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content="Vigrestad Maskin" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Local Business Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Store",
      "name": "Vigrestad Maskin",
      "description": "Fabrikkutsalg av gravemaskiner og grunnarbeidsutstyr",
      "url": "https://vigrestadmaskin.no",
      "telephone": "+4798877800",
      "email": "ege68@msn.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Ã…nestadvegen 23",
        "addressLocality": "Varhaug",
        "postalCode": "4365",
        "addressCountry": "NO"
      },
      "areaServed": {
        "@type": "Country",
        "name": "Norge"
      },
      "priceRange": "$$",
      "paymentAccepted": "Cash, Credit Card",
      "openingHours": "Mo-Fr 08:00-16:00",
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 58.6025,
        "longitude": 5.6503
      }
    })} />

    <!-- Product Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Product",
      "name": "Gravemaskiner",
      "description": "Bredt utvalg av gravemaskiner og kompaktlastere for salg",
      "brand": {
        "@type": "Organization",
        "name": "Vigrestad Maskin"
      },
      "offers": {
        "@type": "AggregateOffer",
        "availability": "https://schema.org/InStock",
        "priceCurrency": "NOK",
        "seller": {
          "@type": "Organization",
          "name": "Vigrestad Maskin"
        }
      }
    })} />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
